<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Spinner
        android:id="@+id/spinnerSistemas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextNombreParque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Parque" />

    <EditText
        android:id="@+id/editTextTipoParque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextExtensionParque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Extension"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBoxTieneVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Es Protegido?" />

    <Button
        android:id="@+id/buttonAgregarPlaneta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onAgregarComputadoraClick"
        android:text="Agregar Parque" />
</LinearLayout>
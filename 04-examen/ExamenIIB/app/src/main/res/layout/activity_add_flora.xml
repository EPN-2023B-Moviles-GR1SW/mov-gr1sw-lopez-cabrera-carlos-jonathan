<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextNombreFlora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la Flora" />

    <EditText
        android:id="@+id/editTextColorFlora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color" />

    <EditText
        android:id="@+id/editTextAlturaFlora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Altura"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBoxEnExtincion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se Encuentra en extincion? " />

    <Button
        android:id="@+id/buttonAgregarFlora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Flora" />

</LinearLayout>